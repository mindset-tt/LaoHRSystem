<Window x:Class="LaoHR.Bridge.Config.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lao HR - ZKTeco Bridge Configuration" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ZKTeco Device Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>
            
            <CheckBox x:Name="ChkEnabled" Content="Enable ZKTeco Integration Service" FontSize="14" Margin="0,0,0,20"/>
            
            <Label Content="Device IP Address:" FontSize="12"/>
            <TextBox x:Name="TxtIp" Height="30" Padding="5" Margin="0,0,0,10" FontSize="14"/>
            
            <Label Content="Port (Default: 4370):" FontSize="12"/>
            <TextBox x:Name="TxtPort" Height="30" Padding="5" Margin="0,0,0,20" FontSize="14" Text="4370"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="BtnTest" Content="Test Connection" Width="140" Height="35" Margin="0,0,10,0" Click="BtnTest_Click" Background="#DDDDDD"/>
                <Button x:Name="BtnSave" Content="Save Settings" Width="120" Height="35" Click="BtnSave_Click" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
            
            <Border BorderBrush="#EEE" BorderThickness="1" Margin="0,20,0,0" Padding="10" Background="#FAFAFA">
                <TextBlock x:Name="TxtStatus" Text="Ready." TextWrapping="Wrap" Foreground="Gray"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
